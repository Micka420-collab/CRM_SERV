{
  "name": "itstock-crm",
  "version": "1.0.0",
  "description": "ITStock CRM by Nextendo - Gestion d'inventaire IT",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-all": "cd server && npm install && cd ../client && npm install",
    "electron:dev": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:5173 && electron .\"",
    "client:build": "cd client && npm run build",
    "electron:build": "npm run client:build && electron-builder --win",
    "electron:build:dir": "npm run client:build && electron-builder --win --dir"
  },
  "keywords": ["itstock", "crm", "inventory", "nextendo"],
  "author": "Nextendo",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  }
}
